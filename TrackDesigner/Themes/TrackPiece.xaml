<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:trackDesigner="clr-namespace:TrackDesigner">
    <Style x:Key="TrackPieceStyle" TargetType="{x:Type trackDesigner:TrackPiece}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type trackDesigner:TrackPiece}">
                    <Border x:Name="Part_Border" 
                            Background="White" 
                            BorderBrush="DarkGray"
                            BorderThickness="1">
                        <Path Name="Part_Path" 
                              Stretch="Uniform" 
                              ClipToBounds="True" 
                              Stroke="DarkGray" 
                              StrokeThickness="2"
                              Data="{TemplateBinding Path}"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>